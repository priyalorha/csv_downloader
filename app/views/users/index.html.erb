<!-- app/views/users/index.html.erb -->

<h1>List of Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Phone</th>
      <th> Download </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td>
          <%= link_to "Download CSV", user_csv_path(user.id, format: :csv) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

